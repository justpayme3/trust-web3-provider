{
  "exclude": [
    "package.json",
    "rollup.config.js",
    "tsconfig.json",
    "tests",
    "./dist"
  ],
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist/types",
    "lib": ["ES2020", "DOM"],
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"]
}
